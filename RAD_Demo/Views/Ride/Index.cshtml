@{
    ViewData["Title"] = "Trang chủ";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <h1>Chào mừng bạn đến với ứng dụng đặt xe!</h1>
    <p>Vui lòng <a asp-controller="Ride" asp-action="Book">đặt xe</a> hoặc xem <a asp-controller="Ride" asp-action="History">lịch sử đặt xe</a>.</p>
}
else
{
    <h1>Vui lòng đăng nhập</h1>
    <p>Bạn cần <a asp-controller="Account" asp-action="Login">đăng nhập</a> hoặc <a asp-controller="Account" asp-action="Register">đăng ký</a> để sử dụng dịch vụ.</p>
}